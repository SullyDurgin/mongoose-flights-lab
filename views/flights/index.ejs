<%- include("../partials/html-head") %>

<link rel="stylesheet" href="/stylesheets/flights/index.css">
  
<%- include("../partials/nav") %>
<main>
  <h1>Flight List</h1>
  <table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Flight Number</th>
        <th>Details</th>
        <th>Delete â˜ </th>
      </tr>
    </thead>
    <tbody>
      <% flights.forEach(m => { %>
        <tr>
          <td><%= m.airline %></td>
          <td><%= m.flightNo %></td>
          <td>
            <a href="/flights/<%= m._id %>">DETAILS</a>
          </td>
          <td>
            <form action="/flights/<%= m._id %>?_method=DELETE" method="POST">
              <button type="submit">X</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</main>
