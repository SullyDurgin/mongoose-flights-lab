<%- include("../partials/html-head") %>

  <link rel="stylesheet" href="/stylesheets/flights/index.css">

  <%- include("../partials/nav") %>
    <main>
      <h1>Current Flight List</h1>
      <table>
        <thead>
          <tr>
            <th>Date of Departure</th>
            <th>Airport</th>
            <th>Details</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% flights.forEach(m=> { %>
            <tr>
              <td>
                <%= m.departs %>
              </td>
              <td>
                <%= m.airport %>
              </td>
              <td>
                <a href="/flights/<%= m._id %>">Flight Details</a>
              </td>
              <td>
                <form action="/flights/<%= m._id %>?_method=DELETE" method="POST">
                  <button type="submit">X</button>
                </form>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </main>
    <%- include("../partials/footer") %>