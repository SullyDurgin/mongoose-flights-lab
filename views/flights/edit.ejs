<%- include("../partials/html-head") %>

<link rel="stylesheet" href="/stylesheets/flights/new.css">
  
<%- include("../partials/nav") %>
<main>
  <h1>Edit a flight</h1>
  <form action="/flights/<%= flight._id %>?_method=PUT" method="POST">
    <label>airline:
      <input type="text" name="airline" value="<%= flight.airline%>">
    </label><br>
    <label>Release Year:
      <input type="text" name="flightNo" value="<%= flight.flightNo %>">
    </label><br>
    <label>MPAA Rating
      <select name="airport">
        <option value="<%= flight.airport %>"><%= flight.airport%></option>
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN">DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
      </select>
    </label><br>
    <button type="submit">Edit flight</button>
  </form>
</main>

