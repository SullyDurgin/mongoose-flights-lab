<%- include("../partials/html-head") %>

  <link rel="stylesheet" href="/stylesheets/flights/new.css">

  <%- include("../partials/nav") %>
    <main>
      <h1>Enter a New Flight</h1>
      <form action="/flights" method="POST">
        <label>Airline:
          <input type="text" name="airline">
        </label><br>
        <label>Flight Number:
          <input type="text" name="flightNo">
        </label><br>
        <label>Airport for Departure:
          <select name="airport">
            <option value="AUS">AUS</option>
            <option value="DFW">DFW</option>
            <option value="DEN">DEN</option>
            <option value="LAX">LAX</option>
            <option value="SAN">SAN</option>
          </select>
        </label><br>
        <label>Departs On:
          <input type="text" name="departs">
        </label><br>
        <label>Ticket Price:
          <input type="text" name="price">
        </label><br>
        <label>Seats Available:
          <input type="checkbox" name="seatsAvail" checked>
        </label><br>
        <label>Seat Number:
          <input name="seat" required pattern="[A-F][1-9]\d?">
        </label><br>
        <button type="submit">Add Flight Information</button>
      </form>
    </main>

    <%- include("../partials/footer") %>